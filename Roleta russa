import java.util.Scanner;
import java.util.Random;

public class Main
{
	public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        Random rand = new Random();
        
        String[] nomesN = {"Abílio", "Eduardo", "João Batista", "João Guilherme", "Lucas", "Rafael Fonseca", "Rafael Vinícius", "Robinho"};
        String[] nomesS = {"Guilherme", "Henrique", "Lutz", "Nando", "Torrada"};
        
        int menu;
        int x = 0;
        
        while (x == 0){
        
            System.out.println("!!!ROLETA RUSSA!!!");
            System.out.println();
            System.out.println("Escolha uma opção:");
            System.out.println("[1] Nordeste Group.");
            System.out.println("[2] Sulistas Group.");
            System.out.println("[3] Créditos.");
            System.out.println("[4] Arregar.");
            menu = input.nextInt();
		
            
            switch (menu){
            case 1:
                System.out.println("Nordeste Group escolhido.");
                break;
            
            case 2:
                System.out.println("Sulistas Group escolhido.");
                break;
		    
            case 3:
                System.out.println("Créditos:");
                System.out.println();
                System.out.println("Criador:");
                System.out.println();
                System.out.println("JOÃO GUILHERME");
                input.nextInt();
                break;
            
            case 4:
                System.out.println("Você arregou e saiu.");
                System.out.println("PATÉTICO!");
                x = 1;
                break;
            
            default:
                System.out.println("Valor incorreto.");
	            input.nextLine();
            }
	    }
		
		
		
	}
}
